{
  "name": "tei-dialogue-editor",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:proxy": "NEXT_PUBLIC_BASE_PATH=/dhlab-experiment-ui next build",
    "start": "next start",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "clean": "rm -rf .next out node_modules/.cache",
    "test": "jest",
    "ax:test": "bun -e \"import { ax, ai } from '@ax-llm/ax'; console.log('Ax installed');\"",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "corpus:setup": "scripts/setup-corpora.sh",
    "corpus:analyze": "nix-shell -p libxslt --run 'bun scripts/analyze-corpora.ts'",
    "corpus:split": "bun scripts/generate-splits.ts",
    "corpus:split:ml": "bun scripts/generate-ml-splits.ts",
    "corpus:convert-p4": "nix-shell -p libxslt --run 'bun scripts/convert-p4-to-p5.ts'",
    "corpus:convert-novel-dialogism": "bun scripts/convert-novel-dialogism.ts",
    "corpus:all": "bun run corpus:convert-novel-dialogism && bun run corpus:setup && nix-shell -p libxslt --run 'bun scripts/convert-p4-to-p5.ts' && bun run corpus:analyze && bun run corpus:split && bun run corpus:split:ml",
    "docs:videos": "bun run test:e2e --project=doc-videos",
    "docs:videos:watch": "bun scripts/watch-doc-videos.ts",
    "docs:videos:optimize": "bun scripts/optimize-doc-videos.ts",
    "docs:videos:cli": "bun scripts/generate-doc-videos.ts",
    "prepare": "effect-language-service patch"
  },
  "dependencies": {
    "@ax-llm/ax": "^16.0.10",
    "@ax-llm/ax-ai-sdk-provider": "^16.0.10",
    "@effect/platform": "^0.94.2",
    "@effect/schema": "^0.75.5",
    "@monaco-editor/react": "^4.7.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@types/dompurify": "^3.0.5",
    "chokidar": "^5.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "compromise": "^14.14.5",
    "d3": "^7.9.0",
    "dexie": "^4.2.1",
    "dompurify": "^3.3.1",
    "effect": "^3.19.15",
    "fast-xml-parser": "^5.3.3",
    "lucide-react": "^0.563.0",
    "next": "16.1.4",
    "openai": "^6.16.0",
    "radix-ui": "^1.4.3",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-hotkeys-hook": "^5.2.3",
    "reactflow": "^11.11.4",
    "recharts": "^3.7.0",
    "salve-annos": "^1.2.4",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "web-streams-polyfill": "^4.2.0",
    "xmldom": "^0.6.0",
    "xregexp": "^4.3.0",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@effect/language-service": "^0.73.0",
    "@playwright/test": "^1.58.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/chokidar": "^2.1.7",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.30",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.1.4",
    "fake-indexeddb": "^6.2.5",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "node-fetch": "^2.7.0",
    "prettier": "^3.4.2",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.6",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5"
  },
  "overrides": {
    "glob": "^10.0.0",
    "inflight": "^2.0.0"
  }
}
